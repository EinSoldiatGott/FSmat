clc;
close all;

%[BT,endian]=conectaIMU();

%HMC
figBarras=figure(1);
title('HMC');
maxHMC=int16 ([0,0,0]);
minHMC=int16 ([0,0,0]);
for i=1:100
    i
    subplot(1,3,1)
    [xHMX,yHMC,zHMC]=leeHMCxyz(BT,endian);
    xyzHMC=[xHMX,yHMC,zHMC];
    maxHMC=max(maxHMC,xyzHMC);
    minHMC=min(minHMC,xyzHMC);    
    bar(maxHMC,'r'); hold on;
    bar(minHMC,'g'); hold on;
    bar(xyzHMC,'b'); hold off;    
    xt(['x','y','z']);
    pause(.05);
end

% fclose(BT);